generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/sqlite.db"
}

model Users {
  id              Int @id @default(autoincrement())
  email           String @unique
  passwordHash    String
  isVerified      Boolean @default(false)
  catalogo_libri  Catalogo_libri[]
}

model Catalogo_libri {
  id              Int @id @default(autoincrement())
  codiceisbn      String
  username        String 
  photo_url       String @unique
  prezzo          Int
  adozione_libri  Adozione_libri @relation(fields: [codiceisbn], references: [codiceisbn])
  user            Users @relation(fields: [id], references: [id])
}

model Adozione_libri {
  id              Int @id @default(autoincrement())
  codicescuola    String
  annocorso       Int
  sezioneanno     String
  tipogradoscuola String
  combinazione    String
  disciplina      String
  codiceisbn      String @unique
  autori          String
  titolo          String
  sottotitolo     String?
  volume          String
  editore         String
  prezzo          Float
  nuovaadoz       Boolean
  daacquist       Boolean
  consigliato     String
  regione         String
  catalogo_libri  Catalogo_libri[] 
}
